{
  "compilerOptions": {
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "target": "es5",
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "./src",

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
